<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>MvcJspDemo</display-name>
  <welcome-file-list>
    <welcome-file>/view/login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>registration_page</servlet-name>
  	<jsp-file>/view/register.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>registration_page</servlet-name>
  	<url-pattern>/reg</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>login_page</servlet-name>
  	<jsp-file>/view/login.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login_page</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login_controller</servlet-name>
  	<jsp-file>/controller/logincontroller.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login_controller</servlet-name>
  	<url-pattern>/checkuser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>reg_controller</servlet-name>
  	<jsp-file>/controller/regcontroller.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>reg_controller</servlet-name>
  	<url-pattern>/reguser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>home_page</servlet-name>
  	<jsp-file>/view/home.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>home_page</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>logout_page</servlet-name>
  	<jsp-file>/controller/logoutcontroller.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>logout_page</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>product_controller</servlet-name>
  	<jsp-file>/controller/productcontroller.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>product_controller</servlet-name>
  	<url-pattern>/getall</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>showproducts_page</servlet-name>
  	<jsp-file>/view/showallproducts.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>showproducts_page</servlet-name>
  	<url-pattern>/showall</url-pattern>
  </servlet-mapping>  
</web-app>