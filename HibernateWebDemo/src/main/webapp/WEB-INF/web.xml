<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>registration_page</servlet-name>
  	<jsp-file>/view/register.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>registration_page</servlet-name>
  	<url-pattern>/reg</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login_page</servlet-name>
  	<jsp-file>/view/login.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login_page</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login_controller</servlet-name>
  	<jsp-file>/controller/logincontroller.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login_controller</servlet-name>
  	<url-pattern>/checkuser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>registration_controller</servlet-name>
  	<jsp-file>/controller/regcontroller.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>registration_controller</servlet-name>
  	<url-pattern>/adduser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>home_page</servlet-name>
  	<jsp-file>/view/home.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>home_page</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>logout_controller</servlet-name>
  	<jsp-file>/controller/logoutcontroller.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>logout_controller</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>product_controller</servlet-name>
  	<jsp-file>/controller/productcontroller.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>product_controller</servlet-name>
  	<url-pattern>/getall</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>products_page</servlet-name>
  	<jsp-file>/view/showallproducts.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>products_page</servlet-name>
  	<url-pattern>/showall</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>/view/login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
